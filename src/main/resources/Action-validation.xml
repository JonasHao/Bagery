<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN"
        "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">

<!-- http://struts.apache.org/docs/form-validation-using-xml.html -->
<!-- http://struts.apache.org/docs/validation.html -->
<validators>
    <validator type="regex">
        <param name="fieldName">username</param>
        <param name="regex"><![CDATA[[A-Za-z0-9]{5,12}]]></param>
        <message>用户名要求5~12位数字及字母组合</message>
    </validator>
    <validator type="regex">
        <param name="fieldName">password</param>
        <param name="regex"><![CDATA[[A-Za-z0-9]{5,20}]]></param>
        <message>密码要求5~20位数字及字母组合</message>
    </validator>
    <validator type="email">
        <param name="fieldName">email</param>
        <message>电子邮箱格式错误</message>
    </validator>
    <validator type="stringlength">
        <param name="fieldName">realname</param>
        <param name="minLength">2</param>
        <param name="maxLength">10</param>
        <message>姓名要求2~10个字符</message>
    </validator>
    <validator type="stringlength">
        <param name="fieldName">receiver_name</param>
        <param name="minLength">2</param>
        <param name="maxLength">10</param>
        <message>姓名要求2~10个字符</message>
    </validator>
    <validator type="regex">
        <param name="fieldName">mobile</param>
        <param name="regex"><![CDATA[[0-9]{11}]]></param>
        <message>手机号码要求11位数字</message>
    </validator>
    <validator type="stringlength">
        <param name="fieldName">product_name</param>
        <param name="minLength">1</param>
        <param name="maxLength">20</param>
        <message>商品名要求1~20个字符</message>
    </validator>

    <validator type="double">
        <param name="fieldName">unit_price</param>
        <param name="minInclusive">0.00</param>
        <param name="maxInclusive">100000000.00</param>
        <message>单价要求在${minInclusive}和${maxInclusive}之间
        </message>
    </validator>
    <validator type="double">
        <param name="fieldName">sale_price</param>
        <param name="minInclusive">0.00</param>
        <param name="maxInclusive">100000000.00</param>
        <message>优惠价要求在${minInclusive}和${maxInclusive}之间
        </message>
    </validator>
    <validator type="double">
        <param name="fieldName">total_price</param>
        <param name="minInclusive">0.00</param>
        <param name="maxInclusive">100000000.00</param>
        <message>总价要求在${minInclusive}和${maxInclusive}之间
        </message>
    </validator>
    <validator type="stringlength">
        <param name="fieldName">product_color</param>
        <param name="minLength">1</param>
        <param name="maxLength">10</param>
        <message>商品颜色要求1~10个字符</message>
    </validator>
    <validator type="int">
        <param name="fieldName">num</param>
        <param name="min">1</param>
        <message>数量要求为正整数</message>
    </validator>
    <validator type="int">
        <param name="fieldName">stock</param>
        <param name="min">0</param>
        <message>库存要求为非负整数</message>
    </validator>
    <validator type="int">
        <param name="fieldName">star</param>
        <param name="min">1</param>
        <param name="max">5</param>
        <message>评分要求为1~5的整数</message>
    </validator>
    <validator type="regex">
        <param name="fieldName">order_id</param>
        <param name="regex"><![CDATA[[0-9]{16}]]></param>
        <message>订单号要求16位数字</message>
    </validator>
    <validator type="regex">
        <param name="fieldName">courier_number</param>
        <param name="regex"><![CDATA[[A-Za-z0-9]{10,15}]]>
        </param>
        <message>物流单号要求10-15位数字字母组合</message>
    </validator>
</validators>